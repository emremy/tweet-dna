# TweetDNA Configuration
# Copy this file to .env and fill in your values

# Core paths
TWEETDNA_DB_PATH=./data/tweetdna.sqlite
TWEETDNA_CACHE_DIR=./data/cache
TWEETDNA_LOG_LEVEL=INFO

# LLM Provider: openai or local
LLM_PROVIDER=openai

# Model selection per task
# Profile: use highest quality model (one-time cost)
LLM_MODEL_PROFILE=gpt-4o
# Generate: use cost-effective model (frequent calls)
LLM_MODEL_GENERATE=gpt-4o-mini
# Review: use small/fast model
LLM_MODEL_REVIEW=gpt-4o-mini

# OpenAI credentials
OPENAI_API_KEY=

# Local LLM settings (Ollama or compatible)
# Only needed if LLM_PROVIDER=local
LOCAL_LLM_BASE_URL=http://127.0.0.1:11434
LOCAL_LLM_MODEL=llama3

# Embeddings (optional, for better example retrieval)
# Set to 'none' to use lexical similarity instead
EMBEDDINGS_PROVIDER=none
# EMBEDDINGS_MODEL=text-embedding-3-small
